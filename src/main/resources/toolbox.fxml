            <Button fx:id="resetButton" mnemonicParsing="false" styleClass="toolbox-player-button" text="reset">
               <graphic>
                  <FontIcon iconLiteral="fas-undo-alt" iconSize="12" styleClass="toolbox-player-icon" />
               </graphic></Button>
            <Button id="play-button" fx:id="playButton" contentDisplay="TOP" mnemonicParsing="false" styleClass="toolbox-player-button" text="play">
               <graphic>
                  <FontIcon fx:id="playButtonIcon" iconLiteral="fas-play" iconSize="12" styleClass="toolbox-player-icon" />
               </graphic>
