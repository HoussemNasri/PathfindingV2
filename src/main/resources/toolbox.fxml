                              <ToggleGroup fx:id="wallEditorGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" selected="true" text="Erase" textFill="#d7d7d7" toggleGroup="$wallEditorGroup" />
